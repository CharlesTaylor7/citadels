{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./types",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "module": "esnext",
    "jsx": "react-jsx",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "baseUrl": ".",                      
    "paths": {                        
      "@/*": ["./src/*"]             
    }
  },
  "include": ["src" ],
  "exclude": [
    "angular/",
    "types/"
  ]
}
